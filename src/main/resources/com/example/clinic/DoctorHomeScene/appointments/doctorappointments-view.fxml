<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.clinic.homeSystem.DoctorMyAppointmentsController" styleClass="main-container" stylesheets="@styles.css" prefWidth="1080" prefHeight="720">
   <top>
      <VBox spacing="15" styleClass="header-container">
         <Button fx:id="backButton" onAction="#switchToHome" text="← Back" styleClass="back-button" />

         <HBox spacing="0" styleClass="filter-bar">
            <Button fx:id="notConcludedBtn" text="Not Concluded" styleClass="filter-button, filter-button-active" />
            <Button fx:id="concludedBtn" text="Concluded" styleClass="filter-button" />
            <Button fx:id="allBtn" text="All" styleClass="filter-button" />
         </HBox>
      </VBox>
   </top>
   <center>
      <ScrollPane fitToWidth="true" styleClass="scroll-pane">
         <VBox fx:id="appointmentsContainer" spacing="10" styleClass="appointments-container" />
      </ScrollPane>
   </center>
</BorderPane>