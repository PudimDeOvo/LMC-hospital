<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane prefHeight="720.0" prefWidth="1080.0"
            xmlns="http://javafx.com/javafx/8"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.example.clinic.homeSystem.ReviewDoctorController">

    <children>
        <Label layoutX="50" layoutY="50" text="Avaliar Médico"
               style="-fx-font-size: 28px; -fx-font-weight: bold;"/>

        <Label layoutX="50" layoutY="120" text="Médico:"/>
        <ComboBox fx:id="doctorComboBox" layoutX="150" layoutY="115" prefWidth="200"/>

        <Label layoutX="50" layoutY="170" text="Comentário:"/>
        <TextArea fx:id="reviewText" layoutX="150" layoutY="165" prefWidth="400" prefHeight="200"/>

        <Button layoutX="50" layoutY="400" text="Enviar avaliação" onAction="#handleSubmit"/>
        <Button layoutX="200" layoutY="400" text="Voltar" onAction="#handleBack"/>
    </children>
</AnchorPane>
