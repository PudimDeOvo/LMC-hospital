<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1"
      alignment="CENTER" prefHeight="720.0" prefWidth="1080.0"
      styleClass="container" stylesheets="@styles.css" fx:controller="com.example.clinic.homeSystem.ReviewDoctorController" >

    <Label styleClass="title" text="Evaluete Doctor" />

    <VBox alignment="CENTER" maxWidth="600.0" prefWidth="600.0" spacing="40.0">

        <VBox styleClass="form-group" spacing="15.0">
            <Label styleClass="form-label" text="Doctor:" />
            <ComboBox fx:id="doctorComboBox" maxWidth="1.7976931348623157E308"
                      promptText="Select a doctor" styleClass="form-select" />
        </VBox>

        <VBox styleClass="form-group" spacing="15.0">
            <Label styleClass="form-label" text="Stars:" />
            <ComboBox fx:id="starsComboBox" maxWidth="1.7976931348623157E308"
                      promptText="Rate from 1 to 5" styleClass="form-select" />
        </VBox>

        <VBox styleClass="form-group" spacing="15.0">
            <Label styleClass="form-label" text="Comment:" />
            <TextArea fx:id="reviewText" maxWidth="1.7976931348623157E308"
                      prefHeight="200.0" promptText="Share your experience"
                      styleClass="form-textarea" wrapText="true" />
        </VBox>

        <Label fx:id="feedbackLabel" styleClass="feedback-label" text="" wrapText="true" />

        <HBox alignment="CENTER" spacing="20.0" styleClass="button-group">
            <Button onAction="#handleSubmit" mnemonicParsing="false"
                    styleClass="btn-primary" text="Submit" />
            <Button onAction="#handleBack" mnemonicParsing="false"
                    styleClass="btn-secondary" text="Back" />

        </HBox>

    </VBox>

</VBox>