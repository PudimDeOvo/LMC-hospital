<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane prefHeight="720.0" prefWidth="1080.0"
            xmlns="http://javafx.com/javafx/8"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.example.clinic.homeSystem.PatientAppointmentsController">

    <children>
        <Label layoutX="50" layoutY="50" text="Agendar Consulta"
               style="-fx-font-size: 28px; -fx-font-weight: bold;"/>

        <Label layoutX="50" layoutY="120" text="Médico:"/>
        <ComboBox fx:id="doctorComboBox" layoutX="150" layoutY="115" prefWidth="200"/>

        <Label layoutX="50" layoutY="170" text="Data:"/>
        <DatePicker fx:id="datePicker" layoutX="150" layoutY="165"/>

        <Label layoutX="50" layoutY="220" text="Horário:"/>
        <TextField fx:id="timeField" layoutX="150" layoutY="215" prefWidth="200" promptText="Ex: 14:30"/>

        <Button layoutX="50" layoutY="300" text="Confirmar" onAction="#handleConfirm"/>
        <Button layoutX="170" layoutY="300" text="Voltar" onAction="#handleBack"/>
    </children>
</AnchorPane>
