<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.text.*?>

<?import java.net.URL?>
<BorderPane xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.example.clinic.registerSystem.SignUpController"
            styleClass="root">
    <left>
        <Pane styleClass="decorative-pane"/>
    </left>

    <right>
        <VBox spacing="20" alignment="CENTER_LEFT" styleClass="form-container" BorderPane.alignment="CENTER">
            <Text text="Sign up" styleClass="title"/>

            <GridPane hgap="10" vgap="10">
                <TextField fx:id="usernameField" promptText="Username"/>
                <PasswordField fx:id="passwordField" promptText="Password" GridPane.rowIndex="1"/>
                <TextField fx:id="nameField" promptText="Full name" GridPane.rowIndex="2"/>
                <TextField fx:id="ageField" promptText="Age" GridPane.rowIndex="3"/>
                <TextField fx:id="healthPlanField" promptText="Health plan" GridPane.rowIndex="4"/>
            </GridPane>

            <Button text="Sign up" onAction="#handleSignUpButtonAction" styleClass="submit-button"/>
            <Hyperlink text="Already have an account? Log in."
                       textFill="#555555"
                       onAction="#switchToLogin" />
        </VBox>
    </right>

    <stylesheets>
        <URL value="@styles.css"/>
    </stylesheets>
</BorderPane>